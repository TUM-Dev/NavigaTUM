{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:recommended",
    "group:allNonMajor"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "devDependencies"
    },
    {
      "matchPackagePatterns": ["eslint", "prettier", "ruff", "pytest", "pretty_assertions", "pre-commit", "mypy", "sourcery", "@types/.*", "types-.*"],
      "groupName": "linting",
      "automerge": true
    }
  ]
}
