{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:recommended",
    "group:allNonMajor",
    "customManagers:biomeVersions"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 5am every weekday",
    "every weekend"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "major-release",
      "automerge": false
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    },
    {
      "groupName": "testing",
      "automerge": true,
      "matchPackageNames": [
        "/pytest/",
        "/cypress/",
        "/pretty_assertions/",
        "/testcontainers_modules/",
        "/testcontainers/"
      ]
    },
    {
      "groupName": "rust-stable",
      "automerge": true,
      "matchPackageNames": [
        "/serde/",
        "/base64/",
        "/tracing/",
        "/rustls/",
        "/tokio/"
      ]
    },
    {
      "groupName": "linting",
      "automerge": true,
      "matchPackageNames": [
        "/@biomejs/biome/",
        "/pre-commit/",
        "/postcss/",
        "/ruff/",
        "/pretty_assertions/",
        "/pre-commit/",
        "/mypy/",
        "/sourcery/",
        "/@types/.*/",
        "/types-.*/",
        "/scss/",
        "/openapi-typescript/"
      ]
    },
    {
      "groupName": "temporary-debump3",
      "automerge": true,
      "matchPackageNames": [
        "/polars/"
      ]
    },
    {
      "groupName": "maplibre",
      "automerge": false,
      "matchPackageNames": [
        "/maplibre-gl/",
        "/maplibre-gl-indoor/"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "pnpm-ignore-non-major",
      "enabled": false,
      "matchPackageNames": [
        "/pnpm/"
      ]
    }
  ]
}
